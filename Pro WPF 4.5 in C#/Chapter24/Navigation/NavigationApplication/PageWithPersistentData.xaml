<Page x:Class="NavigationApplication.PageWithPersistentData"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="PageWithPersistentData"
    >

    <StackPanel HorizontalAlignment="Left">
      <TextBlock Margin="5">        
        Type something below.
      </TextBlock>
      <TextBox Margin="5" Name="txt"></TextBox>
      <Button Margin="5" Click="SetText">Copy Text From TextBox to Custom Property</Button>
      <Button Margin="5" Click="GetText">Copy Text From Custom Property to Label</Button>
      <Label Margin="5" Name="lbl"></Label>
      <TextBlock Margin="5">
        Click <Hyperlink NavigateUri="Page1.xaml">here</Hyperlink> to go to Page1.
      </TextBlock>
    </StackPanel>

</Page>
