<Window x:Class="Windows7_TaskBar.ThumbnailClipping"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ThumbnailClipping" Height="300" Width="300">
    <Grid Name="LayoutRoot">
        <StackPanel>
            <Button Click="cmdShrinkPreview_Click" Margin="10" Padding="20">Set the Preview on Button #1</Button>
            <Button Click="cmdShrinkPreview_Click" Margin="10" Padding="20">Set the Preview on Button #2</Button>
            <Button Click="cmdShrinkPreview_Click" Margin="10" Padding="20">Set the Preview on Button #3</Button>         
        </StackPanel>
    </Grid>
    <Window.TaskbarItemInfo>
        <TaskbarItemInfo x:Name="taskBarItem"></TaskbarItemInfo>
    </Window.TaskbarItemInfo>
</Window>
